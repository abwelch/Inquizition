@{
    ViewData["Title"] = "Edit Success";
}
@model Inquizition.Models.InputFlashCard


<section>
    <header class="row">
        <div class="col text-center">
            <h1 class="display-4">Sucessfully Edited Card @Model.CardNumber of "<span style="color:lightgreen">@Model.InquizitorName</span>"</h1>
            <hr />
        </div>
    </header>

    <div class="row justify-content-center">
        <div class="col-10 col-sm-8 col-md-6 flip_container">
            <div class="flip m-0 p-0">
                <div class="flip_front w-100">
                    <div class="card">
                        <div class="text-center card-body @Model.CardColor">
                            <textarea readonly rows="6" class="form-control text-center" style="display: block; height: 100%; font-size:x-large;">@Model.CardBody</textarea>
                        </div>
                    </div>
                </div>
                <div class="flip_back w-100">
                    <div class="card">
                        <div class="text-center card-body @Model.CardColor">
                            <textarea readonly rows="6" class="form-control text-center" style="display: block; height: 100%; font-size:x-large;">@Model.CardAnswer</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>