<!DOCTYPE html>
<html lang="en">
<head>
    @using Microsoft.AspNetCore.Identity
    @inject UserManager<IdentityUser> UserManager
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inquizition</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom navbar-shadow mb-3">
            <div class="container-fluid">
                <button id="toggle-button" class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span id="toggle-boi" class="navbar-toggler-icon"></span>
                </button>
                <a id="inquiz" class="navbar-brand d-md-none" asp-controller="Home" asp-action="Index">Inquizition</a>
                <div class="navbar-collapse collapse d-md-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <!-- Dropdown menu -->
                            <div class="dropdown show">
                                <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Inquizitors
                                </a>
                                <div class="dropdown-menu col-3">
                                    <a class="dropdown-item" asp-controller="Create" asp-action="Index">Overview</a>
                                    <!--
                                    <a class="dropdown-item" href="#">Public</a>
                                        -->
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Create" asp-action="InitialSetup">Create</a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="dropdown-item" asp-controller="Manage" asp-action="Index">Manage</a>
                                    }
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown show">
                                <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Social
                                </a>
                                <div class="dropdown-menu col-3">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="dropdown-item" href="#">Friends List</a>
                                        <a class="dropdown-item" href="#">Messages</a>
                                    }
                                    else
                                    {
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login to Access</a>
                                    }
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown show">
                                <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Policies
                                </a>
                                <div class="dropdown-menu col-3">
                                    <a class="dropdown-item" href="#">Privacy</a>
                                    <a class="dropdown-item" href="#">Terms of Use</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown show">
                                <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Help
                                </a>
                                <div class="dropdown-menu col-3">
                                    <a class="dropdown-item" asp-controller="Help" asp-action="Index">Introduction</a>
                                    <a class="dropdown-item" href="#">Report Bug</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid text-right">
            <p>Developed by Andrew Welch</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
