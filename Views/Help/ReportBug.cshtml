@{
    ViewData["Title"] = "Report a Bug";
}
@model Inquizition.Models.ReportBug

<section>
    <header class="row">
        <div class="col text-center">
            <h1 class="display-3">Report a Bug</h1>
            <hr />
        </div>
    </header>
    <article class="row">
        <div class="col col-sm-10 col-md-8">
            <form asp-controller="Help" asp-action="ReportBug">
                <div class="form-group">
                    <label for=""></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" id="title" class="form-control" placeholder="Enter a title" asp-for="Title" style="font-size:large;" />
                </div>
                <div class="form-group">
                    <label for=""></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea rows="4" id="description" class="form-control" placeholder="Enter a description" asp-for="Description" style="font-size:large;"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Bug</button>
            </form>
        </div>
    </article>
</section>

@section Scripts {
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}